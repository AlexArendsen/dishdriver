<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/menuBarLinearLayout">

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/menuSpinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/beverageSpinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Beverage" />

        <ImageButton
            android:id="@+id/sendOrderToKitchenButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_send_black_24dp" />



        <ImageButton
            android:id="@+id/checkButton"
            android:shadowColor="@color/complementPrimaryColor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_attach_money_black_24dp" />


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/menuItemRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/menuBarLinearLayout"
        android:layout_toEndOf="@+id/divider" />

    <View
        android:id="@+id/divider"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@color/black" />

