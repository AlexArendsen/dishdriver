<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/itemImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_insert_emoticon_black_24dp" />

        <LinearLayout
            android:id="@+id/itemLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/itemImageView"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAMPLE"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/itemStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Complete"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/itemDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="This is a chad dude approved item DUDE." />

        </LinearLayout>

        <TextView
            android:id="@+id/itemPriceTextImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/itemModifyImageView"
            android:text="$1.00"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/itemModifyImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toLeftOf="@+id/itemClearFrameLayout"
            app:srcCompat="@drawable/ic_border_color_black_24dp" />

        <FrameLayout
            android:id="@+id/itemClearFrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/itemClearImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                app:srcCompat="@drawable/ic_clear_black_24dp" />
        </FrameLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>