<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:descendantFocusability="beforeDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:weightSum="1">

    <ImageView
        app:srcCompat="@drawable/usericon"
        android:id="@+id/userNameIconImageView"
        android:background="@color/white"
        android:layout_width="0dp"
        android:layout_height="50dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/passwordIconImageView"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/passwordIconImageView"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/passwordIconImageView"
        android:layout_marginBottom="48dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/passicon"
        android:id="@+id/passwordIconImageView"
        android:background="@color/white"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/passwordEditText"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="240dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:layout_height="200dp"
        app:srcCompat="@drawable/icon"
        android:id="@+id/truckIconImageView"
        android:layout_width="250dp"
        app:layout_constraintLeft_toRightOf="@+id/titleTextView"
        app:layout_constraintBottom_toBottomOf="@+id/titleTextView"
        />

    <Button
        android:text="Login"
        android:background="@color/white"
        android:id="@+id/loginButton"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@+id/passwordEditText"
        android:layout_width="200dp"
        android:layout_marginTop="32dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="@+id/passwordEditText"
        app:layout_constraintLeft_toLeftOf="@+id/passwordIconImageView" />

    <TextView
        android:id="@+id/titleTextView"
        android:text="Dish Driver"
        android:textSize="76sp"
        android:fontFamily="serif"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:inputType="textPersonName"
        android:ems="10"
        android:background="@color/white"
        android:id="@+id/userNameEditText"
        android:hint="  Email"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@+id/userNameIconImageView"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView"
        android:layout_marginEnd="240dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:layout_width="0dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordEditText"
        android:hint=" Password"
        android:background="@color/white"
        android:singleLine="false"
        android:selectAllOnFocus="false"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@+id/passwordIconImageView"
        app:layout_constraintTop_toBottomOf="@+id/userNameEditText"
        android:layout_marginTop="48dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginEnd="240dp" />


</android.support.constraint.ConstraintLayout>